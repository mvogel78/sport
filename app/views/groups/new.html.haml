%h1 Neuer Nutzer
%div{ :class => "row" }
  %div{ :class => "span6 offset3" }
    = form_for @group do |f|
      =f.label :name
      =f.text_field :name
      =f.label :starts_at
      =f.text_field :starts_at
      =f.label :ends_at
      =f.text_field :ends_at
      =f.label :agegroup
      =f.input :agegroup, :as => :select, :label => "Altersgruppe", :include_blank => true, :collection => AG
      = submit_tag 'Save', :class => 'btn btn-large btn-primary'
