%h1= "Gruppe: " + @group.name
%div{ :class => "row" }
  %div
    - if @noc.nil?
      %table
        %thead
          %td Vorname
          %td Name
          %td Geburtsdatum
          %td Geschlecht
          %td Postleitzahl
        %body
        - @children.each do |child|
          = render child
    - else
      %p Die Gruppe hat noch keine Teilnehmer
  
