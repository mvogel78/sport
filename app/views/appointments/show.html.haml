%h1= "Termin"
= @appointment.attendances.count
%table
  %tr
    %td Vorname
    %td name
    %td Abwesenheit
    %td Grund
    %td Kommentar
  - @appointment.attendances.each do |attendance|
    %tr
      %td= attendance.child.firstname
      %td= attendance.child.lastname
      %td= attendance.absence
      %td= attendance.reason
      %td= attendance.comment


